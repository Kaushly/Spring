<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
      fx:controller="ru.geekbrains.spring.Controller">

    <HBox spacing="5">
        <TableView fx:id="shop" editable="false" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn prefWidth="90.0" text="id" fx:id="idColumn" />
                <TableColumn prefWidth="150.0" text="Название" fx:id="nameColumn" />
                <TableColumn prefWidth="100.0" text="Цена" fx:id="priceColumn" />
                <TableColumn prefWidth="50.0" text="Остаток" fx:id="countColumn" />
            </columns>
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </TableView>
        <TableView fx:id="basketTable" editable="false" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn prefWidth="90.0" text="id" fx:id="idBuyColumn" />
                <TableColumn prefWidth="150.0" text="Название" fx:id="nameBuyColumn" />
                <TableColumn prefWidth="100.0" text="Цена" fx:id="priceBuyColumn" />
            </columns>
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </TableView>
    </HBox>
    <HBox>
        <TextField fx:id="choice" promptText="Введите ID товара">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </TextField>
        <Button fx:id="enter" text="Купить" HBox.hgrow="ALWAYS" onAction="#btnAddAction">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="Delete" text="Удалить товар" HBox.hgrow="ALWAYS" onAction="#btnDeleteAction">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="Exit" text="Выйти" HBox.hgrow="ALWAYS" onAction="#btnExitAction">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
